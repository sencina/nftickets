{
  "name": "nftickets",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "nodemon ./src/index.ts",
    "lint": "eslint --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "cd .. && cd .. && husky install ./packages/nftickets/.husky",
    "db:migrate": "prisma migrate deploy",
    "db:make-migrations": "prisma migrate dev",
    "db:generate": "prisma generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "canvas": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fs": "0.0.1-security",
    "imagemin": "^8.0.1",
    "imagemin-pngquant": "^9.0.2",
    "nodemon": "^3.1.4",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/imagemin": "^9.0.0",
    "@types/qrcode": "^1.5.5",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
